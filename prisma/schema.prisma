// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id           Int        @id @default(autoincrement())
  name         String     @db.VarChar(50)
  email        String     @unique @db.VarChar(50)
  phone        String     @db.VarChar(50)
  password     String     @db.VarChar(255)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  role         Role       @default(user)
  
}

enum Role {
  admin
  user
}

   model Movie {
     id          Int      @id @default(autoincrement())
     title       String
     description String
     price       Float
     rating      Float
     genre       String
   
   }

  model Order {
     id           Int      @id @default(autoincrement())
     userId       String
     orderdate    Float
  
       
   }


   model Cart {
     id       Int      @id @default(autoincrement())
     userId   Int
     movieId  Int
     quantity Int
   }

  model OrderItem {
     id           Int      @id @default(autoincrement())
     orderId      String
     movieId      String
     quantity     String
     totalPrice   Float
     
       
   }

  model MovieRating {
     id       Int      @id @default(autoincrement())
     userId   Int
     movieId  Int
     rating   Float
   }



